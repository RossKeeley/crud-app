<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>CRUD Express App</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <section id="Add-quote">
      <form action="/quotes" method="POST">
        <input type="text" placeholder="name" name="name">
        <input type="text" placeholder="quote" name="quote">
        <button type="submit">Submit</button>
      </form>
    </section>

    <section id="Update-quote">
      <div>
        <h2>Darth Vadar invades!</h2>
        <p>
          Replace first Yoda's quote with a quote written by Darth Vadar
        </p>
        <button id="update-button">Replace Yoda's quote</button>
      </div>
    </section>

    <section id="delete-quote">
      <div>
        <h2>Remove Darth Vader!</h2>
        <p>
          Delete one of Darth Vader's quotes. Does nothing if there are no more Darth Vader quotes
        </p>
        <button id="delete-button">Delete Darth Vader's quote</button>
      </div>
      <div id="message"></div>
    </section>

    <section id="Display-quotes">
      <h2> quotes </h2>
      <ul>
        <!-- Loop through quotes -->
        <% for(var i = 0; i < quotes.length; i++) {%>
          <li class="quote">
            <!-- Output name from the iterated quote object -->
            <span><%= quotes[i].name %></span>:
            <!-- Output quote from the iterated quote object -->
            <span><%= quotes[i].quote %></span>
          </li>
        <% } %>
      </ul>
    </section>

    <script src="/main.js"></script>
  </body>
</html>
